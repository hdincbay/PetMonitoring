{
  "openapi": "3.1.1",
  "info": {
    "title": "PetMonitoring.Movement.API | v1",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://127.0.0.1:7144"
    },
    {
      "url": "http://127.0.0.1:5109"
    }
  ],
  "paths": {
    "/api/Movement": {
      "post": {
        "tags": [
          "Movement"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateMovementCommand"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateMovementCommand"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/CreateMovementCommand"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Movement/{petId}": {
      "get": {
        "tags": [
          "Movement"
        ],
        "parameters": [
          {
            "name": "petId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ActivityLevel": {
        "type": "integer"
      },
      "CreateMovementCommand": {
        "required": [
          "petId",
          "deviceId",
          "stepCount",
          "distanceInMeters",
          "activityLevel",
          "activeMinutes",
          "inactiveMinutes"
        ],
        "type": "object",
        "properties": {
          "petId": {
            "type": "string",
            "format": "uuid"
          },
          "deviceId": {
            "type": "string",
            "format": "uuid"
          },
          "stepCount": {
            "pattern": "^-?(?:0|[1-9]\\d*)$",
            "type": [
              "integer",
              "string"
            ],
            "format": "int32"
          },
          "distanceInMeters": {
            "pattern": "^-?(?:0|[1-9]\\d*)(?:\\.\\d+)?(?:[eE][+-]?\\d+)?$",
            "type": [
              "number",
              "string"
            ],
            "format": "double"
          },
          "activityLevel": {
            "$ref": "#/components/schemas/ActivityLevel"
          },
          "activeMinutes": {
            "pattern": "^-?(?:0|[1-9]\\d*)$",
            "type": [
              "integer",
              "string"
            ],
            "format": "int32"
          },
          "inactiveMinutes": {
            "pattern": "^-?(?:0|[1-9]\\d*)$",
            "type": [
              "integer",
              "string"
            ],
            "format": "int32"
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "Movement"
    }
  ]
}