{
  "openapi": "3.1.1",
  "info": {
    "title": "PetMonitoring.Health.API | v1",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://localhost:7140"
    },
    {
      "url": "http://localhost:5113"
    }
  ],
  "paths": {
    "/api/HeartRate/Add": {
      "post": {
        "tags": [
          "HeartRate"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AddHeartRateCommand"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/AddHeartRateCommand"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/AddHeartRateCommand"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/HeartRate/Update": {
      "put": {
        "tags": [
          "HeartRate"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateHeartRateCommand"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateHeartRateCommand"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateHeartRateCommand"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/HeartRate/{petId}": {
      "get": {
        "tags": [
          "HeartRate"
        ],
        "parameters": [
          {
            "name": "petId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AddHeartRateCommand": {
        "required": [
          "petId",
          "deviceId",
          "bpm"
        ],
        "type": "object",
        "properties": {
          "petId": {
            "type": "string",
            "format": "uuid"
          },
          "deviceId": {
            "type": "string",
            "format": "uuid"
          },
          "bpm": {
            "pattern": "^-?(?:0|[1-9]\\d*)$",
            "type": [
              "integer",
              "string"
            ],
            "format": "int32"
          }
        }
      },
      "UpdateHeartRateCommand": {
        "required": [
          "id",
          "petId",
          "deviceId",
          "bpm"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "petId": {
            "type": "string",
            "format": "uuid"
          },
          "deviceId": {
            "type": "string",
            "format": "uuid"
          },
          "bpm": {
            "pattern": "^-?(?:0|[1-9]\\d*)$",
            "type": [
              "integer",
              "string"
            ],
            "format": "int32"
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "HeartRate"
    }
  ]
}