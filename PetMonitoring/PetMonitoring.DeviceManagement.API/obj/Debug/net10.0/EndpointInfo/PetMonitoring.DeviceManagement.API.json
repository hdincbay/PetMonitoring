{
  "openapi": "3.1.1",
  "info": {
    "title": "PetMonitoring.DeviceManagement.API | v1",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://127.0.0.1:7225"
    },
    {
      "url": "http://127.0.0.1:5220"
    }
  ],
  "paths": {
    "/api/Device": {
      "post": {
        "tags": [
          "Device"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateDeviceCommand"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateDeviceCommand"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/CreateDeviceCommand"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Device/{petId}": {
      "get": {
        "tags": [
          "Device"
        ],
        "parameters": [
          {
            "name": "petId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CreateDeviceCommand": {
        "required": [
          "petId",
          "batteryPercentage"
        ],
        "type": "object",
        "properties": {
          "petId": {
            "type": "string",
            "format": "uuid"
          },
          "batteryPercentage": {
            "pattern": "^-?(?:0|[1-9]\\d*)$",
            "type": [
              "integer",
              "string"
            ],
            "format": "int32"
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "Device"
    }
  ]
}