{
  "openapi": "3.1.1",
  "info": {
    "title": "PetMonitoring.Temperature.API | v1",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://localhost:7026"
    },
    {
      "url": "http://localhost:5042"
    }
  ],
  "paths": {
    "/api/Temperature": {
      "post": {
        "tags": [
          "Temperature"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateTemperatureCommand"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateTemperatureCommand"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/CreateTemperatureCommand"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Temperature/{petId}": {
      "get": {
        "tags": [
          "Temperature"
        ],
        "parameters": [
          {
            "name": "petId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CreateTemperatureCommand": {
        "required": [
          "petId",
          "deviceId",
          "celsiusValue"
        ],
        "type": "object",
        "properties": {
          "petId": {
            "type": "string",
            "format": "uuid"
          },
          "deviceId": {
            "type": "string",
            "format": "uuid"
          },
          "celsiusValue": {
            "pattern": "^-?(?:0|[1-9]\\d*)(?:\\.\\d+)?$",
            "type": [
              "number",
              "string"
            ],
            "format": "double"
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "Temperature"
    }
  ]
}